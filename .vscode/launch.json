{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (hardcoded script name)",
            "cwd": "${workspaceFolder}/build",
            "program": "${workspaceFolder}/build/build.sh",
            "args": [ "-patch" ]
        },
        {
            "name": "Launch build",
            "program": "${workspaceFolder}/build/build.js",
            "request": "launch",
            "args": ["1.1.11"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch nodedaemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/output/nodedaemon.js",
            "outputCapture": "std",
            // "args": [ "-l", "debug", "--appsdir", "./output/sysapps" ],
            "args": [ "--appsdir", "./output/sysapps" ],
            "env": {
                "HAINTERFACE_LOGGING": "info",
                "HAMAIN_LOGGING": "info",
            }
        },
        {
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "name": "Attach to Remote",
            "port": 9229,
            "remoteRoot": "/nodedaemon",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "address": "192.168.1.13",
            "localRoot": "${workspaceFolder}",
            "name": "Attach to Production",
            "port": 9229,
            "remoteRoot": "/nodedaemon",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}